mixin block-contacts-geo(props)
    .block-contacts-geo&attributes(attributes)(data-component='block-contacts-geo')
        .block-contacts-geo__title
            +title-main('<span class=\"title-main__inner\">Свяжитесь с нами</span> или обратитесь </br> в главный офис')
        .block-contacts-geo__content
            .block-contacts-geo__refs
                a.block-contacts-geo__refs-title(href='mailto:info@gescons.ru') info@gescons.ru
                .block-contacts-geo__refs-block
                    .block-contacts-geo__refs-suptitle Заказчикам
                    a.block-contacts-geo__refs-contact(href='mailto:tender@gescons.ru') tender@gescons.ru
