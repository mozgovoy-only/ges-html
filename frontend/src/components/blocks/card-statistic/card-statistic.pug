mixin card-statistic(props)
    .card-statistic&attributes(attributes)(data-component='card-statistic')
        if props.picture
            .card-statistic__image
                +picture(props.picture).card-statistic__image-picture
        .card-statistic__content
            .card-statistic__top
                if props.number
                    .card-statistic__top-number=props.number
                if props.topText
                    .card-statistic__top-text=props.topText
            if props.bottomText
                .card-statistic__bottom-text=props.bottomText
